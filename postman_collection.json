{
  "info": {
    "name": "nfc-pay (autowrite)",
    "_postman_id": "nfc-pay-autowrite",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Bootstrap (register device)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-device-key",
            "value": "{{DEVICE_KEY}}"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/v1/bootstrap",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "v1",
            "bootstrap"
          ]
        }
      }
    },
    {
      "name": "Generate Payment + autowrite",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/v1/payments/generate",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "v1",
            "payments",
            "generate"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"amount\": 500, \"currency\": \"PKR\", \"label\": \"Tea\", \"autoWrite\": true}"
        }
      }
    },
    {
      "name": "Device Next Job",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-device-key",
            "value": "{{DEVICE_KEY}}"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/v1/device/next",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "v1",
            "device",
            "next"
          ]
        }
      }
    },
    {
      "name": "Device Ack",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/v1/device/ack",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "v1",
            "device",
            "ack"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"jobId\": \"REPLACE\", \"ok\": true}"
        }
      }
    }
  ],
  "variable": [
    {
      "key": "BASE_URL",
      "value": "https://YOUR-VERCEL-APP.vercel.app"
    },
    {
      "key": "DEVICE_KEY",
      "value": "dev-device-key"
    }
  ]
}
